@model ProvaCandidato.Data.Entidade.ClienteObservacao

<div id="showErrorMessage" style="color: red"></div>
<form id="frmClienteObservacao">
    <div class="form-horizontal">
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Observacao, 5, 100, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Observacao, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</form>
